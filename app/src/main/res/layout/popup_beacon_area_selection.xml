<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#B1BCBE"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/infoTextBeaconSearch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:text="@string/SearchForArea"
        android:textStyle="bold"
        android:textAlignment="center">

    </TextView>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/infoTextBeaconSearch">
    <Button
        android:id="@+id/addAreaButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/centerPoint"
        android:layout_centerVertical="true"
        android:drawableBottom="@drawable/ic_vector_area"
        android:text="Area"
        android:layout_weight="1.0"
        android:background="@drawable/layout_big_button_selection"/>

    <TextView
        android:id="@+id/centerPoint"
        android:text=""
        android:layout_width="2dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/addBeaconButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1.0"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/centerPoint"
        android:layout_centerVertical="true"
        android:drawableBottom="@drawable/ic_vector_bt"
        android:text="beacon"
        android:background="@drawable/layout_big_button_selection"
        />
    </LinearLayout>
</RelativeLayout>