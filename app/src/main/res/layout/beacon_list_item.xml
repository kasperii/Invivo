<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ExrelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge">



    <TextView
        android:id="@+id/ExbeaconName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@+id/ExtextView4"
        android:gravity="center"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ExtextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExtextView"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ExtextView2"
        android:gravity="center_vertical"
        android:text="Minor:"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/ExtextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExtextView"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:text="RSSI"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/ExtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExtextView"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/EximageView"
        android:gravity="center_vertical"
        android:text="Major:"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/EximageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:contentDescription="Icon" />

    <TextView
        android:id="@+id/ExbeaconName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/EximageView"
        android:gravity="center_vertical"
        android:text="Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ExtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ExbeaconName"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/EximageView"
        android:gravity="center_vertical"
        android:text="UUID:"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp" />

</RelativeLayout>