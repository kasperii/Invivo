<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rowBlock"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge">


        <TextView
            android:id="@+id/rowProximity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/rowRSSI"
            android:gravity="center"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rowminor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowuuid"
            android:layout_marginStart="102dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rowmajor"
            android:gravity="center_vertical"
            android:text="Minor:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/rowRSSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowuuid"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="RSSI"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/rowmajor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowuuid"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rowBeaconImage"
            android:gravity="center_vertical"
            android:text="Major:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/rowBeaconImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="Icon"
            android:src="@drawable/ic_vector_bt"
            android:background="@drawable/layout_bt_button"/>

        <TextView
            android:id="@+id/rowbeaconName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/rowBeaconImage"
            android:gravity="center_vertical"
            android:text="Beacon"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rowuuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowbeaconName"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/rowBeaconImage"
            android:gravity="center_vertical"
            android:text="UUID:"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="8sp" />

</RelativeLayout>